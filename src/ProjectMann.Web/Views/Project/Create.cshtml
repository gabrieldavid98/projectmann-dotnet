@model ProjectMann.Core.Domain.Proyecto

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<h4>Proyecto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreProyecto" class="control-label">Nombre del proyecto</label>
                <input asp-for="NombreProyecto" class="form-control" />
                <span asp-validation-for="NombreProyecto" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="FkCliente" class="control-label">Cliente</label>
                <select asp-for="FkCliente" class ="form-control" asp-items="ViewBag.FkCliente"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index">
                    <input type="button" value="Volver" class="btn btn-secondary" />
                </a>
            </div>
        </form>
    </div>
</div>

