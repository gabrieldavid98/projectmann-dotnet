@model ProjectMann.Core.Domain.Proyecto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Esta seguro de eliminar este proyecto?</h3>
<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

            Nombre del proyecto:           
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreProyecto)
        </dd>
        <dt class = "col-sm-2">
            Fecha de creación:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)

        </dd>
        <dt class = "col-sm-2">
            Fecha de modificación:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaModificacion)
        </dd>
        <dt class = "col-sm-2">
            Nombre del cliente:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkClienteNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Estado del proyecto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkEstadoNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Usuario que creo el proyecto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkUsuarioCreaNavigation.Apellido)
        </dd class>
        <dt class = "col-sm-2">
            Usuario que modifica el proyecto:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FkUsuarioModificaNavigation.Apellido)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProyecto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        
        <a asp-action="Index">
            <input type="button" value = "Volver" class="btn btn-secondary"/> </a>
    </form>
</div>
